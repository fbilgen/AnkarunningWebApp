@{
    ViewData["Title"] = "Add Training";
}

@model TrainingViewModel

<section class="py-3">
    <div class="container">
        <h1 class="jumbotron-heading">@ViewData["Title"]</h1>
        <p class="lead text-muted">Add new training</p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <form asp-action="AddTraining" asp-controller="Home" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="text" class="form-control text-capitalize" asp-for="Title">
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Place" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <select asp-for="PlaceId">
                        @foreach (var place in ViewBag.Places)
                        {
                            <option value="@place.Id"> @place.Name</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="PlaceId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Date and Time</label>
                <div class="col-sm-4">
                    <input type="date" class="form-control" asp-for="Date">
                    <input type="time" class="form-control" asp-for="Time">
                </div>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <textarea rows="5" class="form-control" asp-for="Description"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Distance" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="number" class="form-control" asp-for="Distance">
                </div>
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="file" asp-for="Photo" accept="image/*">
                </div>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <button type="submit" class="btn btn-success"><i class="far fa-save"></i>&nbsp;Add</button>
                </div>
            </div>
        </form>

    </div>
</div>
