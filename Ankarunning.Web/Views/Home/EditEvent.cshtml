@{
    ViewData["Title"] = "Edit Event";
}

@model EventViewModel

<section class="py-3">
    <div class="container">
        <h1 class="jumbotron-heading">@ViewData["Title"]</h1>
        <p class="lead text-muted">Edit an Event</p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <form asp-action="EditEvent" asp-controller="Home" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label">#</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" readonly asp-for="Id" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="text" class="form-control text-capitalize" asp-for="Title">
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Location" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" asp-for="Location" />
                </div>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Start Date</label>
                <div class="col-sm-4">
                    <input type="date" class="form-control" asp-for="DateStart" value="@ViewBag.DateStart">
                </div>
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">End Date</label>
                <div class="col-sm-4">
                    <input type="date" class="form-control" asp-for="DateEnd" value="@ViewBag.DateEnd">
                </div>
                <span asp-validation-for="DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <textarea rows="5" class="form-control" asp-for="Description"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="file" asp-for="Photo" accept="image/*">
                    <label class="text-warning font-italic"> If no file chosen, system keeps the old one.</label>
                </div>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <button type="submit" class="btn btn-success"><i class="far fa-save"></i>&nbsp;Update</button>
                    <a href="/Home/Events" type="button" class="btn btn-light"><i class="fas fa-ban"></i>&nbsp;Cancel</a>
                </div>
            </div>
        </form>

    </div>
</div>
