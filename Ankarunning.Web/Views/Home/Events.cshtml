@{
    ViewData["Title"] = "Events";
}

@model List<EventViewModel>

<section class="py-3">
    <div class="container">
        <h1 class="jumbotron-heading">@ViewData["Title"]</h1>
        <p class="lead text-muted">View/Edit Events</p>
    </div>
</section>


<div class="album py-5 bg-light">
    <div class="container table-responsive-md">
        <table class="table table-hover" id="eventsTable">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Location</th>
                    <th scope="col">Date</th>
                    <th scope="col">Description</th>
                    <th scope="col">Photo</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (EventViewModel item in Model)
                {

                    <tr>
                        <th>@item.Id</th>
                        <td>@item.Title</td>
                        <td>@item.Location</td>
                        @if (item.DateEnd.HasValue)
                        {
                            <td>
                                @item.DateStart.Date.ToShortDateString() - @item.DateEnd.Value.Date.ToShortDateString()
                            </td>

                        }
                        else
                        {
                            <td>
                                @item.DateStart.Date.ToShortDateString()
                            </td>
                        }
                        <td>@item.Description</td>
                        <td><a href="/Home/DownloadEventPhoto?eventId=@item.Id"> @item.PhotoName</a></td>
                        <td><a href="/Home/EditEvent?eventId=@item.Id" name="btnEdit" class="btn btn-outline-warning"><i class="far fa-edit"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#eventsTable').paginate({ limit: 5 });
    });


</script>