@{
    ViewData["Title"] = "Add Route";
}

@model RouteViewModel

<section class="py-3">
    <div class="container">
        <h1 class="jumbotron-heading">@ViewData["Title"]</h1>
        <p class="lead text-muted">Add new route</p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <form asp-action="AddRoute" asp-controller="Home" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="text" class="form-control text-capitalize" asp-for="Name">
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Latitude" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" asp-for="Latitude" />
                </div>
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Longitude" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" asp-for="Longitude" />
                </div>
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Distance" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="number" step=".01" class="form-control" asp-for="Distance">
                </div>
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="RouteFile" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="file" asp-for="RouteFile">
                </div>
                <span asp-validation-for="RouteFile" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="RoutePhotoFile" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="file" asp-for="RoutePhotoFile">
                </div>
                <span asp-validation-for="RoutePhotoFile" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <button type="submit" class="btn btn-success"><i class="far fa-save"></i>&nbsp;Add</button>
                </div>
            </div>
        </form>

    </div>
</div>
